<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <TextView
        android:id="@+id/addons_mapping_id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        />
    <TextView
        android:id="@+id/addons_attribute_id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        />

    <CheckBox
        android:id="@+id/addon_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/addons_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#5c5c5c"
        android:text="select addoons"
        android:layout_toRightOf="@id/addon_checkbox"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/addons_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addons_text"
        android:textColor="#000"
        android:text="12458"
        android:layout_toRightOf="@id/addon_checkbox"
        android:textSize="12sp"
        android:textStyle="italic" />

</RelativeLayout>
