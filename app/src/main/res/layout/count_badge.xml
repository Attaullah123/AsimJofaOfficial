<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    style="@android:style/Widget.ActionButton"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center"
    android:id="@+id/relative_layout1">

    <Button
        android:id="@+id/shopping_cart_icon"
        android:layout_width="31sp"
        android:layout_height="29sp"
        android:gravity="center"
        android:padding="3dp"
        android:textAlignment="center"
        android:background="@drawable/cart_small"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="1.2dp"
        android:layout_alignLeft="@+id/shopping_cart_notify"
        android:layout_alignStart="@+id/shopping_cart_notify"
        />

    <TextView
        android:id="@+id/shopping_cart_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#252424"
        android:layout_gravity="center"
        android:textSize="12sp"
        android:text="1"
        android:layout_centerVertical="true"
        android:layout_alignBaseline="@+id/shopping_cart_icon"
        android:layout_alignBottom="@+id/shopping_cart_icon"
        android:layout_centerHorizontal="true" />


