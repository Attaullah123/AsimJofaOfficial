<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center|bottom"
    android:padding="5dp"
    android:background="#ffffff"
    android:id="@+id/window_popup"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/btm_prod_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="AJ-390"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btm_prod_sku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:textSize="15sp"
                android:text="Sku:"
                 />
            <TextView
                android:id="@+id/btm_sku_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="0dp"
                android:textSize="15sp"
                android:textColor="#000"
                android:text="Aj390"
                 />
        </LinearLayout>

        <TextView
            android:id="@+id/btm_category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#1d1c1c"
            android:text="Description"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView
            android:id="@+id/btm_prod_detial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="15dp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:padding="8dp"
            android:text="It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout. "
            />

        <TextView
            android:id="@+id/line"
            android:gravity="center_horizontal"
            android:layout_below="@+id/connect_help"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="#000" />
    </LinearLayout>


    <TextView
        android:id="@+id/btm_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:textColor="#000"
        android:text="Share"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <!--line-->
    <TextView
        android:id="@+id/line1"
        android:gravity="center_horizontal"
        android:layout_below="@+id/connect_help"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#000" />

    <TextView
        android:id="@+id/btm_store_availability"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:textColor="#000"
        android:text="In-Store availability"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <!--line-->
    <TextView
        android:id="@+id/line2"
        android:gravity="center_horizontal"
        android:layout_below="@+id/connect_help"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#000" />

    <TextView
        android:id="@+id/btm_co_care"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:text="Composition and care"
        android:textColor="#000"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <!--line-->
    <TextView
        android:id="@+id/line3"
        android:gravity="center_horizontal"
        android:layout_below="@+id/connect_help"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#000" />

    <TextView
        android:id="@+id/btm_size_guide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:textColor="#000"
        android:text="Size Guide"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <!--line-->
    <TextView
        android:id="@+id/line4"
        android:gravity="center_horizontal"
        android:layout_below="@+id/connect_help"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#000" />

    <TextView
        android:id="@+id/btm_shipping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:textColor="#000"
        android:text="Shipping"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <!--line-->
    <TextView
        android:id="@+id/line5"
        android:gravity="center_horizontal"
        android:layout_below="@+id/connect_help"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#000" />

    <TextView
        android:id="@+id/btm_returns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:textColor="#000"
        android:text="Returns"
        android:textAppearance="?android:attr/textAppearanceMedium" />


</LinearLayout>