<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp"
    >
    <CheckBox
        android:id="@+id/select_cart_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:button="@drawable/custom_checkbox" />

    <ImageView
        android:id="@+id/cart_thumbnail"
        android:layout_width="115dp"
        android:layout_height="150dp"
        android:layout_gravity="center|bottom"
        android:adjustViewBounds="true"
        android:contentDescription="@string/Product"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="143dp"
            android:layout_marginTop="10sp"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <TextView
                android:id="@+id/product_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#515151"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:text="AJ - 389" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/product_sku_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#515151"
                    tools:text="SKu:" />

                <TextView
                    android:id="@+id/product_sku_code"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:textSize="12sp"
                    android:textColor="#515151"
                    tools:text="SKu" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end">

                <Button
                    android:id="@+id/quantity_decrement"
                    android:layout_width="20dp"
                    android:layout_height="23dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="0.5sp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/arrows_sprite1"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/cart_product_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#5f5f5f"
                    android:layout_marginTop="1.5dp"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    tools:text="1" />

                <Button
                    android:id="@+id/quantity_increment"
                    android:layout_width="20dp"
                    android:layout_height="23dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/arrows_sprite2"
                    android:gravity="center"/>
            </LinearLayout>


            <TextView
                android:id="@+id/product_cart_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:paddingTop="6dp"
                android:textColor="#515151"
                android:textSize="16sp"
                tools:text="M" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_gravity="right"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/product_cart_price_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5sp"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="USD"/>

                <TextView
                    android:id="@+id/product_cart_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="9500"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="16sp"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>