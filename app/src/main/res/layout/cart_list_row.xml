<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    >
    <ImageView
        android:id="@+id/cart_thumbnail"
        android:layout_width="115dp"
        android:layout_height="150dp"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <TextView
                android:id="@+id/product_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="#000"
                android:textSize="15sp"
                tools:text="Product name" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/product_sku_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    tools:text="SKu:" />

                <TextView
                    android:id="@+id/product_sku_code"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:textSize="12sp"
                    tools:text="SKu" />
                <TextView
                    android:id="@+id/cart_product_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:drawablePadding="0dp"
                    android:drawableTop="@drawable/delete"
                    android:layout_marginLeft="123dp"
                    android:text="Delete"
                    android:textSize="12sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/cart_product_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:paddingTop="2sp"
                android:textColor="#000"
                android:textSize="16sp"
                tools:text="1" />


            <TextView
                android:id="@+id/product_cart_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:paddingTop="6dp"
                android:textColor="#000"
                android:textSize="15sp"
                tools:text="M" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/product_cart_price_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:paddingLeft="160dp"
                    android:paddingTop="5dp"
                    android:textColor="#000"
                    android:textSize="15sp"
                    tools:text="USD" />

                <TextView
                    android:id="@+id/product_cart_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:paddingLeft="5dp"
                    android:paddingTop="4dp"
                    android:textColor="#000"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    tools:text="500.0" />

            </LinearLayout>



        </LinearLayout>



    </LinearLayout>


</LinearLayout>