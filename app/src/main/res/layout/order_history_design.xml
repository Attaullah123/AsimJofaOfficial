<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rel_payment_select"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="#fff"
            >

            <TextView
                android:id="@+id/adress_customer_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#504e4e"
                android:textSize="17sp"
                android:layout_marginLeft="16dp"
                android:text="Order No:"
                android:layout_alignTop="@+id/linearLayout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="12dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginRight="12sp"
                android:gravity="right"
                android:orientation="horizontal"
                android:id="@+id/linearLayout">

                <TextView
                    android:id="@+id/invoice_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="view"
                    android:drawableLeft="@drawable/view_11"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="2dp"
                    android:textColor="#313030"
                    android:textSize="18sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/order_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="58dp"
                android:layout_marginStart="58dp"
                android:text="12345"
                android:textSize="15dp"
                android:layout_alignBottom="@+id/adress_customer_name1"
                android:layout_toRightOf="@+id/adress_customer_name1"
                android:layout_toEndOf="@+id/adress_customer_name1" />


        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.4dp"
            android:background="#333030"
            android:paddingTop="5dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="#fff"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="Order Status:"
                android:textColor="#504e4e"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30sp"
                android:text="Processing"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="#fff"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="Order Date:"
                android:textColor="#504e4e"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/order_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="44sp"
                android:text="Oct  5 2017  3:42PM" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="#fff"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="Total Order:"
                android:textColor="#504e4e"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/order_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="42sp"
                android:text="USA" />

            <TextView
                android:id="@+id/order_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5sp"
                android:text="15000.00" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>