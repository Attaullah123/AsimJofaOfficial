<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="#fff"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="Order No:"
                android:textColor="#504e4e"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/order_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="60sp"
                android:text="12345"
                android:textSize="15dp"
                />
            <Button
                android:id="@+id/invoice_detail"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="detail"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_marginLeft="110sp"
                android:textColor="#fff"
                android:background="#5b5656"
                />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.4dp"
            android:background="#333030"
            android:paddingTop="5dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="#fff"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="Order Status:"
                android:textColor="#504e4e"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30sp"
                android:text="Processing"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="#fff"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="Order Date:"
                android:textColor="#504e4e"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/order_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="44sp"
                android:text="Oct  5 2017  3:42PM" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="#fff"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="Total Order:"
                android:textColor="#504e4e"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/order_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="42sp"
                android:text="USA" />

            <TextView
                android:id="@+id/order_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5sp"
                android:text="15000.00" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>