<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <View
        android:paddingTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="0.2dp"
        android:background="#393939"/>

    <!--<TextView-->
        <!--android:id="@+id/shipping_charge_within_country"-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="45dp"-->
        <!--android:gravity="center"-->
        <!--android:background="#feb832"-->
        <!--android:textColor="#fff"-->
        <!--android:textStyle="bold"-->
        <!--android:textSize="18sp"-->
        <!--/>-->

    <RelativeLayout
        android:id="@+id/rel_shipping_select"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="#fff"
        >

        <com.cresset.asimjofaofficial.customfonts.CustomFont
            android:id="@+id/shipping_method_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Shipping"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginRight="12sp"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/shipping_currency_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5sp"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/shipping_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:textColor="#000"
            android:textSize="16sp"/>
    </LinearLayout>
    </RelativeLayout>
    <View
        android:paddingTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="0.2dp"
        android:background="#393939"/>

</LinearLayout>