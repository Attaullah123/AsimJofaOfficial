<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
        >
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:minHeight="?attr/actionBarSize"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/toolbar_color">

            <ImageView
                android:contentDescription="@string/logo"
                android:id="@+id/img_back"
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:src="@drawable/ic_close2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Account"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="20dp"
                android:layout_gravity="center"/>
        </android.support.v7.widget.Toolbar>


        </LinearLayout>

        <TextView
            android:id="@+id/acc_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/toolbar_color"
            android:textColor="#000"
            android:textSize="16dp"
            android:text=""
            android:gravity="center"/>

        <View
            android:paddingTop="5dp"
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:background="#2e2b2b"/>

        <LinearLayout
            android:id="@+id/ly_order_history"
            android:layout_marginTop="5dp"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="#ffffff"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/shipping_method_name"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:background="@drawable/ic_order"

                />

            <TextView
                android:id="@+id/acc_order_placed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30sp"
                android:textStyle="bold"
                android:textColor="#282626"
                android:textSize="18dp"
                android:text="Order History"
                />

        </LinearLayout>
        <View
            android:paddingTop="5dp"
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:background="#2e2b2b"/>

        <LinearLayout
            android:id="@+id/ly_personal_details"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="#ffffff"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:background="@drawable/ic_user_info"

                />

            <TextView
                android:id="@+id/acc_user_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30sp"
                android:text="Personal Details"
                android:textColor="#282626"
                android:textSize="18dp"
                android:textStyle="bold" />

        </LinearLayout>
        <View
            android:paddingTop="5dp"
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:background="#2e2b2b"/>

        <LinearLayout
            android:id="@+id/ly_address_book"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="#ffffff"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:background="@drawable/ic_user_info"

                />

            <TextView
                android:id="@+id/acc_address_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30sp"
                android:text="Address Book"
                android:textColor="#282626"
                android:textSize="18dp"
                android:textStyle="bold" />

        </LinearLayout>
        <View
            android:paddingTop="5dp"
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:background="#2e2b2b"/>

        <LinearLayout
            android:id="@+id/ly_contact_us"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="#ffffff"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:background="@drawable/ic_contact"

                />

            <TextView
                android:id="@+id/contact_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"

                android:layout_marginLeft="30sp"
                android:text="Contact Us"
                android:textColor="#282626"
                android:textSize="18dp"
                android:textStyle="bold" />

        </LinearLayout>
        <View
            android:paddingTop="5dp"
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:background="#2e2b2b"/>
    </LinearLayout>

    <com.cresset.asimjofaofficial.customfonts.MyTextView
        android:id="@+id/log_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eaeaea"
        android:text="Log Out"
        android:textSize="20dp"
        android:textColor="#000"
        android:padding="16dp"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>