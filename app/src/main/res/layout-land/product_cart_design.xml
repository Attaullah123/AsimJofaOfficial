            <!--android:textSize="12sp"-->
            <!--android:textStyle="bold"-->
            <!--android:textColor="#f9f7f7"-->
            <!--/>-->
            <!--</LinearLayout>-->


        </RelativeLayout>

    </android.support.v7.widget.CardView>
